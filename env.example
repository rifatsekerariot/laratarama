# ---------------------------------------------------------------------------
# Panel Envanter - Environment template
# Copy to .env and set values. Never commit .env to version control.
# ---------------------------------------------------------------------------

# Required in production (app will exit if missing)
NODE_ENV=production
# Generate a secure SESSION_SECRET (run once, paste below):
#   openssl rand -base64 32
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=paste-generated-secret-here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ariot
DB_USER=postgres
DB_PASSWORD=your-db-password

# Server
PORT=3000

# CORS (production only): comma-separated allowed origins, e.g. https://app.example.com
# Leave unset for same-origin only when NODE_ENV=production
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Optional: bcrypt rounds for password hashing (default 12)
# BCRYPT_ROUNDS=12
